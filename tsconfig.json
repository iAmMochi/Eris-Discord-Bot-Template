{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "removeComments": true,
        "alwaysStrict": true,
        "strict": true,
        "declaration": true,
        "noImplicitThis": true,
        "outDir": "bin",
        "pretty": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}